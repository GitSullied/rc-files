#!/bin/bash
system=`uname`

DOTFILES=$(dirname ${BASH_ARGV[0]%/*})

if [ -f ~/.localenv ]; then
	. ~/.localenv
fi

if [ "$system" == 'Linux' ]; then
	. $DOTFILES/bash/rc.linux
fi
if [ "$system" == 'Darwin' ]; then
	. $DOTFILES/bash/rc.osx
fi

if [ ! -n "$HOSTNAME" ]; then
	HOSTNAME=`hostname -s`
fi

. $DOTFILES/bash/aliases
. $DOTFILES/bash/colors
. $DOTFILES/bash/completion

if [[ -f ~/.dir_colors && ( -x /usr/local/bin/dircolors || -x /usr/bin/dircolors ) ]]; then
    eval `dircolors ~/.dir_colors`
fi

if [[ -e ~/.ssh/ssh_auth_sock ]] then
    export SSH_AUTH_SOCK=~/.ssh/ssh_auth_sock
fi

unset DOTFILES
unset system
