#!/bin/bash
alias status='git status -s'
alias commit='git commit -a'
alias gadd='git add .'
alias push='git push origin --all'
alias pull='git pull origin master'

if [[ -x /usr/local/bin/dircolors ]]; then
	alias list='/usr/local/bin/ls --color=auto'
else
	alias list='ls'
fi

alias ls='list -h'
alias l='list -CF'
alias ll='list -lh'
alias la='list -alh'
alias mis='cat'
alias canhaz='sudo apt-get install'

if [ "$system" == 'Linux' ]; then
	alias rm='rm -I'
fi

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors || -x /usr/local/bin/dircolors ]; then
	eval "`dircolors -b`"
	alias list='list --color=auto'
	
	alias grep='grep -Hn --color=auto'
	alias egrep='egrep --color=auto'
	alias fgrep='fgrep --color=auto'
fi
